{
    "private": true,
    "scripts": {
        "test": "jest",
        "dev": "run-p nexus:watch watch",
        "esbuild": "tsup src/server.ts",
        "build": "tsc",
        "docs": "npm-run-all docs:generate docs:serve",
        "ts": "node -r esm -r esbuild-register",
        "eslint": "eslint --fix '**/*.ts' '**/*.js'",
        "prettier": "prettier '**/*.ts' '**/*.js' --write",
        "lint": "npm-run-all eslint prettier",
        "watch": "nodemon --exec yarn ts ./src/server.ts",
        "nexus:watch": "nodemon --exec yarn nexus:generate",
        "nexus:generate": "yarn ts src/graphql/schema",
        "postinstall": "yarn nexus:generate",
        "graphdoc": "graphdoc",
        "clear:all": "rimraf ./docs ./dist ./node_modules",
        "docs:clear": "rimraf ./docs",
        "docs:create": "graphdoc -s ./src/graphql/schema.graphql -o ./docs",
        "docs:generate": "npm-run-all docs:clear docs:create",
        "docs:serve": "npx serve ./docs"
    },
    "dependencies": {
        "@nexus/schema": "^0.15.0",
        "apollo-server-fastify": "^2.16.1",
        "fastify": "^2.2.0",
        "graphql": "^15.3.0",
        "graphql-iso-date": "^3.6.1",
        "graphql-type-json": "^0.3.2",
        "puppeteer": "^5.2.1",
        "threads": "^1.6.3",
        "ts-node": "^8.10.2"
    },
    "devDependencies": {
        "@2fd/graphdoc": "https://github.com/Hebilicious/graphdoc#master",
        "@types/graphql-iso-date": "^3.4.0",
        "@types/jest": "^26.0.9",
        "@types/node": "^14.0.27",
        "@types/puppeteer": "^3.0.1",
        "@typescript-eslint/eslint-plugin": "^3.9.0",
        "@typescript-eslint/parser": "^3.9.0",
        "apollo-server-testing": "^2.16.1",
        "esbuild": "^0.6.23",
        "esbuild-register": "^1.0.2",
        "eslint": "^7.6.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-import": "^2.22.0",
        "eslint-plugin-jest": "^23.20.0",
        "eslint-plugin-promise": "^4.2.1",
        "esm": "^3.2.25",
        "jest": "^26.4.0",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "ts-jest": "^26.2.0",
        "tsup": "^3.4.3",
        "typescript": "^3.9.7"
    }
}
